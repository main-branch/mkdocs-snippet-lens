{
  "name": "mkdocs-snippet-lens",
  "displayName": "mkdocs-snippet-lens",
  "description": "Preview and open MkDocs --8<-- snippets directly in VS Code.",
  "version": "0.0.5",
  "publisher": "main-branch",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/main-branch/mkdocs-snippet-lens.git"
  },
  "bugs": {
    "url": "https://github.com/main-branch/mkdocs-snippet-lens/issues"
  },
  "homepage": "https://github.com/main-branch/mkdocs-snippet-lens#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mkdocs",
    "snippets",
    "markdown",
    "documentation",
    "preview",
    "lens",
    "inline",
    "code-snippets"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mkdocs-snippet-lens.toggleAllPreviews",
        "title": "MkDocs Snippet Lens: Toggle All Previews"
      }
    ],
    "configuration": {
      "title": "MkDocs Snippet Lens",
      "properties": {
        "mkdocsSnippetLens.basePath": {
          "type": "string",
          "default": "",
          "description": "Base directory for resolving snippet paths (relative to workspace root)"
        },
        "mkdocsSnippetLens.previewMaxLines": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Maximum number of lines to show in inline preview"
        },
        "mkdocsSnippetLens.previewMaxChars": {
          "type": "number",
          "default": 200,
          "minimum": 10,
          "description": "Maximum number of characters to show in inline preview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "clean": "rm -rf out dist coverage .nyc_output",
    "clean:all": "npm run clean && rm -rf node_modules .vscode-test .husky/_",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run clean && npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "npm run test:unit",
    "pretest:unit": "npm run compile-tests",
    "test:unit": "c8 --100 --exclude 'out/extension.js' --exclude 'out/snippetLinkProvider.js' --exclude 'out/snippetHoverProvider.js' --exclude 'out/previewManager.js' --exclude 'out/diagnosticManager.js' --exclude 'out/test/**' mocha out/test/unit/**/*.test.js",
    "pretest:integration": "npm run compile-tests && npm run compile",
    "test:integration": "vscode-test",
    "pretest:all": "npm run clean && npm run compile-tests && npm run compile",
    "test:all": "npm run test:unit && npm run test:integration",
    "postinstall": "husky",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.26",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "c8": {
    "exclude": [
      "out/extension.js",
      "out/snippetLinkProvider.js",
      "out/snippetHoverProvider.js",
      "out/previewManager.js",
      "out/diagnosticManager.js",
      "out/test/**"
    ]
  }
}
